<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_keyboard_rootview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#bababa"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#bababa" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#efefef" >

        <TextView
            android:id="@+id/input_finish"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/keyboard_finish_bg" />

    </FrameLayout>

    <ctrip.crn.keyboard.CRNKeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:keyBackground="@drawable/keyboard_normal_bg"
        android:keyTextColor="#000000"
        android:keyTextSize="28sp"
        android:paddingBottom="0dip"
        android:paddingTop="1px" />

</LinearLayout>